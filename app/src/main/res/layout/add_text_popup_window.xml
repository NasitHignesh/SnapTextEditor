<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_text_done_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border_text_view"
        android:padding="10dp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <com.rtugeek.android.colorseekbar.ColorSeekBar
        android:id="@+id/colorSeekBarInPopPop"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_65sdp"
        app:colorSeekBarVertical="true"
        />

    <ImageView
        android:id="@+id/ivAddBackGround"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/add_text_done_tv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="35dp"
        android:elevation="@dimen/_4sdp"
        app:srcCompat="@drawable/tool" />

    <ImageView
        android:id="@+id/textCenter"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_below="@+id/ivAddBackGround"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="35dp"
        android:elevation="@dimen/_4sdp"
        app:srcCompat="@drawable/text_center"
        app:tint="@color/white"/>


    <LinearLayout
        android:id="@+id/llEditTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/add_text_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/abraham_lincoln"
            android:inputType="textMultiLine"
            android:text=" "
            android:gravity="center"
            android:textSize="40sp"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/add_text_color_picker_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/font_picker_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </RelativeLayout>

</RelativeLayout>